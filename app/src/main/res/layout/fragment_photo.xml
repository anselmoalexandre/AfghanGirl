<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".ui.fragments.Photo">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/afghanGirlUserPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_25dp"
        android:layout_marginBottom="@dimen/_25dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/afghan_girl" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/afghanGirlUserPhotoInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_info_white_48dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/afghanGirlUserPhotoDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_10dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/afghan_girl_yellow_600"
        app:srcCompat="@drawable/ic_favorite_black_24dp" />

    <!-- Progress Bar -->
    <include layout="@layout/progress_bar" />
</androidx.constraintlayout.widget.ConstraintLayout>