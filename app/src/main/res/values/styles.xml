<resources>
    <!-- Base Theme -->
    <style name="Theme.AfghanGirl" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/afghan_girl_yellow_600</item>
        <item name="colorPrimaryVariant">@color/afghan_girl_yellow_a700</item>
        <item name="colorOnPrimary">@color/afghan_girl_black</item>
        <item name="colorSecondary">@color/afghan_girl_deep_purple_600</item>
        <item name="colorSecondaryVariant">@color/afghan_girl_deep_purple_300</item>
        <item name="colorOnSecondary">@color/afghan_girl_white</item>
        <item name="colorSurface">@color/afghan_girl_white</item>
        <item name="colorOnSurface">@color/afghan_girl_black</item>
        <item name="colorError">@color/afghan_girl_red_600</item>
        <item name="colorOnError">@color/afghan_girl_black</item>
        <item name="android:colorBackground">@color/afghan_girl_white</item>
        <item name="colorOnBackground">@color/afghan_girl_black</item>
        <item name="android:statusBarColor">@color/afghan_girl_yellow_a700</item>
        <item name="bottomNavigationStyle">@style/Theme.AfghanGirl.BottomNavigation</item>
        <!-- Typography -->
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="fontFamily">@font/rajdhani</item>
        <!-- Enable activity transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <!-- Enable content transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <!-- Bottom Navigation View -->
    <style name="Theme.AfghanGirl.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="itemIconTint">?attr/colorSecondary</item>
        <item name="itemTextColor">?attr/colorSecondary</item>
        <item name="itemRippleColor">?attr/colorSecondary</item>
        <item name="itemTextAppearanceActive">@style/Theme.AfghanGirl.TextAppearance.Child</item>
        <item name="itemTextAppearanceInactive">@style/Theme.AfghanGirl.TextAppearance.Child</item>
    </style>

    <!-- Explore card view -->
    <style name="Theme.AfghanGirl.CardView.Explore" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardForegroundColor">@color/afghan_girl_transparent</item>
    </style>

    <!-- Photos card view -->
    <style name="Theme.AfghanGirl.CardView.Photos" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="cardForegroundColor">@color/afghan_girl_transparent</item>
    </style>

    <!-- Text Appearance Title -->
    <style name="Theme.AfghanGirl.TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/rajdhani</item>
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!-- Text Appearance SubTitle -->
    <style name="Theme.AfghanGirl.TextAppearance.SubTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/rajdhani</item>
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!-- Text Appearance Child -->
    <style name="Theme.AfghanGirl.TextAppearance.Child" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="fontFamily">@font/rajdhani</item>
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!-- Text Appearance SubChild -->
    <style name="Theme.AfghanGirl.TextAppearance.SubChild" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="fontFamily">@font/rajdhani</item>
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="Theme.AfghanGirl.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.AfghanGirl.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Theme.AfghanGirl.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>