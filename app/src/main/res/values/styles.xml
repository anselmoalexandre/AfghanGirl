<resources>
    <!-- Theme -->
    <style name="Theme.AfghanGirl" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <!-- Typography -->
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="fontFamily">@font/rajdhani</item>
    </style>

    <!-- Explore card view -->
    <style name="Theme.AfghanGirl.CardView.Explore" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardForegroundColor">@color/afghan_girl_transparent</item>
    </style>

    <!-- Text Appearance Title -->
    <style name="Theme.AfghanGirl.TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/rajdhani</item>
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!-- Text Appearance SubTitle -->
    <style name="Theme.AfghanGirl.TextAppearance.SubTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/rajdhani</item>
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!-- Text Appearance Child -->
    <style name="Theme.AfghanGirl.TextAppearance.Child" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="fontFamily">@font/rajdhani</item>
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!-- Text Appearance SubChild -->
    <style name="Theme.AfghanGirl.TextAppearance.SubChild" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="fontFamily">@font/rajdhani</item>
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>